<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.algolia.instantsearch.voice.ui.view.RippleView
        android:id="@+id/voiceRipple"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:delay="500"
        app:drawable="@drawable/gradient_oval_blue"
        app:duration="8000"
        app:layout_constraintEnd_toEndOf="@+id/voiceMicrophone"
        app:layout_constraintStart_toStartOf="@+id/voiceMicrophone"
        app:layout_constraintBottom_toBottomOf="@+id/voiceMicrophone"
        app:layout_constraintTop_toTopOf="@+id/voiceMicrophone"
        app:radius="10"
        app:size="80dp"/>

    <com.algolia.instantsearch.voice.ui.VoiceFAB
        android:id="@+id/voiceMicrophone"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintVertical_bias="0.55"
        android:elevation="4dp"
        android:scaleType="center"
        android:background="@drawable/ripple_circle_blue"
        android:src="@drawable/ic_microphone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/voiceClose"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:tint="#FFFFFF"
        app:layout_constraintHorizontal_bias="1"
        android:src="@drawable/ic_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/voiceTitle"
        android:textSize="24sp"
        app:layout_constraintVertical_bias="0.3"
        android:layout_width="0dp"
        app:layout_constraintBottom_toTopOf="@id/voiceHint"
        android:layout_height="wrap_content"
        android:text="@string/voice_search_listening"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/voiceHint"
        android:layout_width="0dp"
        android:textAppearance="?attr/textAppearanceBody1"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/voice_search_hint"
        app:layout_constraintBottom_toTopOf="@id/voiceMicrophone"
        app:layout_constraintEnd_toEndOf="@id/voiceTitle"
        app:layout_constraintStart_toStartOf="@id/voiceTitle"
        app:layout_constraintTop_toBottomOf="@+id/voiceTitle"/>

    <TextView
        android:id="@+id/voiceSuggestionText"
        android:layout_width="0dp"
        android:textSize="16sp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginStart="8dp"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        app:layout_constraintBottom_toTopOf="@id/voiceMicrophone"
        app:layout_constraintEnd_toEndOf="@id/voiceTitle"
        app:layout_constraintStart_toStartOf="@id/voiceTitle"
        app:layout_constraintTop_toBottomOf="@id/voiceHint"
        tools:text="•\tiPhone Case \n•\tRunning shoes"/>

    <TextView
        android:id="@+id/voiceTryAgain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        android:textSize="16sp"
        android:visibility="invisible"
        android:text="@string/voice_search_try_again"
        app:layout_constraintTop_toBottomOf="@id/voiceMicrophone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>